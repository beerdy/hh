 <%= render partial: 'application/navbar', locals: {back: false}%>
 <%= render partial: 'application/header', locals: {h1:"События", h1up:"Events"}%>
<div class="content">

<div class="search">
  <ul>
    <li class="current">Категории</li>
    <li><a href="/events/">Все</a></li>
