<section class="news">
 <%= render partial: 'application/navbar', locals: {back: false} %>
 <%= render partial: 'application/header', locals: {h1:"Новости | #{params[:tag]}", h1up:"News"} %>
<div class="content">
<div class="search">
  <a href="/events/">Все</a>
