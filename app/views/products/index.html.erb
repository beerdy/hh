<div id="products-index">
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Slave</th>
      <th>Image</th>
      <th>Link</th>
      <th>Tags</th>
      <th>Url</th>
      <th>Link</th>
      <th>Sort</th>
      <th>Count</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.slave %></td>
        <td><%= product.image %></td>
        <td><%= product.link %></td>
        <td><%= product.tag %></td>
        <td><%= product.url %></td>
        <td><%= product.link %></td>
        <td><%= product.sort %></td>
        <td><%= product.count %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <div class="field">
            <%= link_to 'Купить', cart_item_add_path(:product_id => product.id), class: 'js-cart-item-add', method: :post, remote: true %>
            <input id="product_quantify" type="number" name="product_quantify" value=1>
          </div>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
</div>