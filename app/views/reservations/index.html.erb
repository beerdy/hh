<% if current_user.admin? %>
      <section class="news">
      <%= render partial: 'application/navbar', locals: {back: false}%>
      <%= render partial: 'application/header', locals: {h1:"Брони", h1up:"Reservation"}%>
      <div class="content">
        <div class="text">

      <p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.name %></td>
        <td><%= reservation.phone %></td>
        <td><%= reservation.email %></td>
        <td><%= reservation.description %></td>
        <td><%= reservation.user_id %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

      <%= render partial: 'application/footer', locals: {var1:"123", var2:"123"}%>
  <%end%>
