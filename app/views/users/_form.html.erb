    <%= form.text_field :fio, id: :user_fio %>
  </div>
  
  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :user_phone %>
  </div>

  <div class="field" style="display:none;">
    <%= form.label :hb %>
    <%= form.text_field :hb, id: :user_hb %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :card %>
    <%= form.text_field :card, id: :user_card %>
  </div>

  <div class="field" style="display:none;">
    <%= form.label :role %>
    <%= form.text_field :role, id: :user_role %>
  </div>


  <div class="field" style="display:none;">
    <%= form.label :bonuses %>
    <%= form.text_field :bonuses, id: :user_bonuses %>
  </div>
  
  <div class="field" style="display:none;">
